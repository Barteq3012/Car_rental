@model IEnumerable<CarRental.WebApp.Models.CompanyVM>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span class ="btntext">Add New Company</span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a class="edit" href="@Url.Action("Edit", new { id=item.Id })"><i class="material-icons" title="Edit">&#xE254;</i></a>
                <a class="delete" href="@Url.Action("Delete", new { id=item.Id })"><i class="material-icons" title="Edit">&#xE872;</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
